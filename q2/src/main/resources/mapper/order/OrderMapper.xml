<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zst.week8.q2.module.order.dao.OrderDao">
    <select id="get" resultType="com.zst.week8.q2.module.order.entity.Order">
        <![CDATA[
            SELECT
                *
            FROM
                t_order
            WHERE id = #{id}
        ]]>
    </select>

    <select id="getFirst" resultType="com.zst.week8.q2.module.order.entity.Order">
        <![CDATA[
            SELECT
                *
            FROM
                t_order
            LIMIT 1
        ]]>
    </select>

    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                COUNT(*)
            FROM
                t_order
        ]]>
    </select>

    <select id="page" resultType="com.zst.week8.q2.module.order.entity.Order">
        <![CDATA[
            SELECT
                *
            FROM
                t_order
            LIMIT #{start}, #{end}
        ]]>
    </select>

    <insert id="save" parameterType="com.zst.week8.q2.module.order.entity.Order">
        <![CDATA[
            INSERT INTO
                t_order(user_id, shipping_address, status, price, create_time, update_time)
            VALUES(#{userId}, #{shippingAddress}, #{status}, #{price}, #{createTime}, #{updateTime})
        ]]>
    </insert>

    <update id="update" parameterType="com.zst.week8.q2.module.order.entity.Order">
        <![CDATA[
            UPDATE
                t_order
            SET
                shipping_address = #{shippingAddress},
                status = #{status},
                price = #{price},
                update_time = #{updateTime}
            WHERE
                id = #{id}
        ]]>
    </update>

    <delete id="delete">
        <![CDATA[
            DELETE FROM t_order WHERE id = #{id}
        ]]>
    </delete>
</mapper>