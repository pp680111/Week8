<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zst.week8.q6.module.orderitem.dao.OrderItemDao">
    <insert id="save" parameterType="com.zst.week8.q6.module.orderitem.entity.OrderItem">
        INSERT INTO
            t_order_item(id, order_id, item_id, item_stock_id, price, num)
        VALUES
            (#{id}, #{orderId}, #{itemId}, #{itemStockId}, #{price}, #{num})
    </insert>

    <select id="listByOrderId">
        SELECT
            *
        FROM
            t_order_item
        WHERE
            order_id = #{orderId}
    </select>
</mapper>